{
  "builds": [
    { "src": "api/index.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "handle": "filesystem" },

    { "src": "/api/(.*)", "dest": "/api/index.py" },
    { "src": "/health", "dest": "/api/index.py" },

    { "src": "/dashboard", "dest": "/public/dashboard.html" },
    { "src": "/pricing", "dest": "/public/pricing.html" },
    { "src": "/login", "dest": "/public/login.html" },

    { "src": "/", "dest": "/public/index.html" },
    { "src": "/(.*)", "dest": "/public/$1" }
  ]
}
